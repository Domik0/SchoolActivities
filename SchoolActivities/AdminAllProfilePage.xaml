<Page x:Class="SchoolActivities.AdminAllProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolActivities"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="980"
      Title="AdminAllProfilePage">

    <Grid x:Name="gridData" Background="#fff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Name="iconImage" Source="Images/IconPeople.png" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"/>
        <TextBox Name="fioTextBox" Text="FIO" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" FontSize="20" HorizontalAlignment="Center" BorderThickness="0" Height="50"/>
        <Line Grid.Row="2" Grid.Column="1" X1="30" X2="100" Fill="Gray" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

    </Grid>
</Page>
